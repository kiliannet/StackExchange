# Pods of the project

source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '9.0'

inhibit_all_warnings!

target "StackExchange" do

    pod 'ionicons'              #iconos variados para la aplicaci√≥n.
    pod 'CSNotificationView'    #mostrar notificaciones al usuario.
    pod 'Bypass'                #para mostrar y procesar archivos markdown.
    pod 'TOWebViewController'   #para mostrar un navegador web.
    pod 'MZFormSheetController' #para mostrar ventanas modales tipo popup.

    pod 'AFNetworking'          #para peticiones REST.
    pod 'Mantle'                #para mapear las respuestas REST en objeto tipados.

end

target "StackExchangeTests" do

    pod 'AFNetworking'          #para peticiones REST.
    pod 'Mantle'                #para mapear las respuestas REST en objeto tipados.

end